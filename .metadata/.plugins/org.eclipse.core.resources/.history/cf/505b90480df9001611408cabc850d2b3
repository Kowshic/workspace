			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		lw.launchFirefoxURL(prop.getProperty("url"));
//		lw.launchChromeURL(prop.getProperty("url"));
//		lw.launchInternetExplorerURL(prop.getProperty("url"));
		
	}
	
